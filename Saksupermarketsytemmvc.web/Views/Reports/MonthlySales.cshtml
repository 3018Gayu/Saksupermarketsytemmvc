@model IEnumerable<Saksupermarketsytemmvc.web.Models.Bill>

@{
    ViewData["Title"] = "Monthly Sales Report";
    int selectedMonth = ViewBag.Month ?? DateTime.Today.Month;
    int selectedYear = ViewBag.Year ?? DateTime.Today.Year;
    var categories = ViewBag.Categories as List<Saksupermarketsytemmvc.web.Models.Category> ?? new List<Saksupermarketsytemmvc.web.Models.Category>();
    int selectedCategory = ViewBag.CategoryId ?? 0;
}

<h2>Monthly Sales Report - @selectedMonth/@selectedYear</h2>

<form method="get" class="form-inline mb-3">
    <label class="mr-2">Month:</label>
    <input type="number" name="month" min="1" max="12" value="@selectedMonth" class="form-control mr-3" />

    <label class="mr-2">Year:</label>
    <input type="number" name="year" value="@selectedYear" class="form-control mr-3" />

    <label class="mr-2">Category:</label>
    <select name="categoryId" class="form-control mr-3">
        <option value="0" selected="@(selectedCategory == 0 ? "selected" : null)">All</option>
        @foreach (var c in categories)
        {
            <option value="@c.CategoryId" selected="@(selectedCategory == c.CategoryId ? "selected" : null)">@c.CategoryName</option>
        }
    </select>

    <button class="btn btn-primary">Filter</button>
</form>

<div class="mb-3">
    <a href="/Reports/MonthlySalesPdf?month=@selectedMonth&year=@selectedYear&categoryId=@selectedCategory" class="btn btn-danger">Download PDF</a>
    <a href="/Reports/MonthlySalesExcel?month=@selectedMonth&year=@selectedYear&categoryId=@selectedCategory" class="btn btn-success">Download Excel</a>
</div>

@if (!Model.Any())
{
    <p>No sales recorded for this month.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Bill ID</th>
                <th>Customer</th>
                <th>Bill Date</th>
                <th>Total Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bill in Model)
            {
                <tr>
                    <td>@bill.BillId</td>
                    <td>@(bill.Customer?.CustomerName ?? "Walk-in")</td>
                    <td>@bill.BillDate.ToString("dd/MM/yyyy")</td>
                    <td>@bill.TotalAmount.ToString("C")</td>
                </tr>
                <tr>
                    <td colspan="4">
                        <table class="table table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Unit Price</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in bill.BillItems ?? Enumerable.Empty<Saksupermarketsytemmvc.web.Models.BillItem>())
                                {
                                    <tr>
                                        <td>@(item.Product?.Name ?? "N/A")</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.UnitPrice.ToString("C")</td>
                                        <td>@item.(Quantity * item.UnitPrice).ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
