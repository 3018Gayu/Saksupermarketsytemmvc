@model Saksupermarketsytemmvc.web.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<h2>Category Details</h2>

<div class="card p-3">
    <div><strong>Name:</strong> @Model.CategoryName</div>
    <div><strong>Description:</strong> @Model.Description</div>
</div>

<a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-warning mt-3">Edit</a>
<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>