@model Saksupermarketsytemmvc.web.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<h2 class="text-danger mb-4"><i class="bi bi-trash"></i> Delete Category</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-triangle"></i> @ViewBag.ErrorMessage
    </div>
}

<div class="card shadow-sm p-4 mb-3">
    <div><strong>Name:</strong> @Model.CategoryName</div>
    <div><strong>Description:</strong> @Model.Description</div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="CategoryId" />
    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Cancel
        </a>
    </div>
</form>
