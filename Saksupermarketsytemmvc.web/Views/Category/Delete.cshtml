@model Saksupermarketsytemmvc.web.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<h2 class="mb-3">Delete Category</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<h4>Are you sure you want to delete this category?</h4>

<div class="card shadow-sm p-3 mt-3">
    <div><strong>Name:</strong> @Model.CategoryName</div>
    <div><strong>Description:</strong> @Model.Description</div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="CategoryId" />
    <button type="submit" class="btn btn-danger me-2">
        <i class="bi bi-trash"></i> Delete
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle"></i> Cancel
    </a>
</form>
