@model Saksupermarketsytemmvc.web.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<h2 class="text-info mb-4"><i class="bi bi-eye"></i> Category Details</h2>

<div class="card shadow-sm p-4 mb-3">
    <div><strong>Name:</strong> @Model.CategoryName</div>
    <div><strong>Description:</strong> @Model.Description</div>
</div>

<div class="d-flex justify-content-between">
    <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-warning">
        <i class="bi bi-pencil-square"></i> Edit
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle"></i> Back to List
    </a>
</div>
