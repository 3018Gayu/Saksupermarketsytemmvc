@model Saksupermarketsytemmvc.web.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<h2>@ViewData["Title"]</h2>

<div class="card p-3 mt-3 shadow-sm">
    <div><strong>Name:</strong> @Model.CategoryName</div>
    <div><strong>Description:</strong> @Model.Description</div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
