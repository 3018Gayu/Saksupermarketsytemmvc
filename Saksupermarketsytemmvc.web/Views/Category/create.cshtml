@model Saksupermarketsytemmvc.web.Models.Category

@{
    ViewData["Title"] = "Create Category";
}

<h2>Create Category</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Category Name -->
            <div class="mb-3">
                <label asp-for="CategoryName" class="form-label">Category Name</label>
                <input asp-for="CategoryName" class="form-control" placeholder="Enter category name" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" placeholder="Enter category description (optional)"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <button type="submit" class="btn btn-primary">Create Category</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
