@model Saksupermarketsytemmvc.web.Models.Products

@{
    ViewData["Title"] = "Product Details";
}

<div class="card shadow-sm">
    <div class="card-header bg-info text-white">
        <h4><i class="bi bi-eye"></i> Product Details</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.Category?.CategoryName</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.UnitPrice.Value.ToString("C")</dd>

            <dt class="col-sm-3">Stock</dt>
            <dd class="col-sm-9">@Model.StockQty</dd>
        </dl>

        <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back</a>
        <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Edit</a>
    </div>
</div>
