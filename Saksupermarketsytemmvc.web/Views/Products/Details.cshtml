@model Saksupermarketsytemmvc.web.Models.Products

@{
    ViewData["Title"] = "Product Details";
}

<div class="card shadow-sm">
    <div class="card-header bg-info text-white">
        <h4><i class="bi bi-eye"></i> Product Details</h4>
    </div>

    <div class="card-body">

        <div class="row">

            <!-- LEFT IMAGE -->
            <div class="col-md-4 text-center">
                <img src="@Model.ImageUrl"
                     class="rounded shadow"
                     style="max-width:200px; max-height:200px;" />
            </div>

            <!-- RIGHT DETAILS -->
            <div class="col-md-8">

                <dl class="row">

                    <dt class="col-sm-4">Product Code</dt>
                    <dd class="col-sm-8">@Model.ProductCode</dd>

                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <!-- PRICE ADDED -->
                    <dt class="col-sm-4">Price</dt>
                    <dd class="col-sm-8">@Model.UnitPrice?.ToString("C")</dd>

                    <dt class="col-sm-4">Expiry Date</dt>
                    <dd class="col-sm-8">@Model.ExpiryDate?.ToString("yyyy-MM-dd")</dd>

                    <dt class="col-sm-4">Quantity</dt>
                    <dd class="col-sm-8">@Model.StockQty</dd>

                </dl>

                <a asp-action="Index" class="btn btn-secondary">Back</a>
                <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning">Edit</a>

            </div>
        </div>
    </div>
</div>
