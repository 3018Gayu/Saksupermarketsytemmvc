@model IEnumerable<Saksupermarketsytemmvc.web.Models.Products>

@{
    ViewData["Title"] = "Products";
}

<div class="d-flex justify-content-between mb-3">
    <h2>Products</h2>
    <a class="btn btn-primary" asp-action="Create">Add Product</a>
</div>

<table class="table table-bordered table-striped align-middle">
    <thead class="table-dark">
        <tr>
            <th>SI.NO</th>
            <th>Image</th>
            <th>Product Code</th>
            <th>Name</th>
            <th>Price</th>         <!-- ADDED -->
            <th>Expiry</th>
            <th>Qty</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @if (Model.Any())
        {
            int index = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@index</td>

                    <td>
                        <img src="@item.ImageUrl"
                             style="width:100px; height:100px; object-fit:cover;"
                             class="rounded shadow-sm" />
                    </td>

                    <td>@item.ProductCode</td>
                    <td>@item.Name</td>

                    <!-- PRICE ADDED -->
                    <td>@item.UnitPrice?.ToString("C")</td>

                    <td>@item.ExpiryDate?.ToString("yyyy-MM-dd")</td>
                    <td>@item.StockQty</td>

                    <td>
                        <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-info btn-sm">View</a>
                        <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr><td colspan="8" class="text-center">No products found.</td></tr>
        }
    </tbody>
</table>
