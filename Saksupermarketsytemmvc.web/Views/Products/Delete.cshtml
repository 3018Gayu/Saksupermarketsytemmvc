@model Saksupermarketsytemmvc.web.Models.Products

@{
    ViewData["Title"] = "Delete Product";
}

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
        <h4><i class="bi bi-trash"></i> Delete Product</h4>
    </div>
    <div class="card-body">
        <p>Are you sure you want to delete this product?</p>

        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.Category?.CategoryName</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.UnitPrice.Value.ToString("C")</dd>   

            <dt class="col-sm-3">Stock</dt>
            <dd class="col-sm-9">@Model.StockQty</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="ProductId" />
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Cancel</a>
                <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
            </div>
        </form>
    </div>
</div>
