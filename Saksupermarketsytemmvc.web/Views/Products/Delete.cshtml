@model Saksupermarketsytemmvc.web.Models.Products

@{
    ViewData["Title"] = "Delete Product";
}

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
        <h4><i class="bi bi-trash"></i> Delete Product</h4>
    </div>

    <div class="card-body">

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-warning d-flex align-items-center">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                @ViewBag.ErrorMessage
            </div>
        }

        <div class="row">
            <div class="col-md-4 text-center">
                <img src="@Model.ImageUrl"
                     class="rounded shadow mb-3"
                     style="max-width:250px; max-height:250px; border:2px solid #ccc;" />
            </div>

            <div class="col-md-8">
                <p>Are you sure you want to delete this product?</p>

                <dl class="row">
                    <dt class="col-sm-4">Product Code</dt>
                    <dd class="col-sm-8">@Model.ProductCode</dd>

                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4">Category</dt>
                    <dd class="col-sm-8">@Model.Category?.CategoryName</dd>

                    <dt class="col-sm-4">Price</dt>
                    <dd class="col-sm-8">@Model.UnitPrice?.ToString("C")</dd>

                    <dt class="col-sm-4">Expiry Date</dt>
                    <dd class="col-sm-8">@Model.ExpiryDate?.ToString("yyyy-MM-dd")</dd>

                    <dt class="col-sm-4">Quantity</dt>
                    <dd class="col-sm-8">@Model.StockQty</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="ProductId" />

                    <button type="submit" class="btn btn-danger me-2"
                            onclick="return confirm('Are you sure you want to delete this product?')">
                        <i class="bi bi-trash"></i> Delete
                    </button>

                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
