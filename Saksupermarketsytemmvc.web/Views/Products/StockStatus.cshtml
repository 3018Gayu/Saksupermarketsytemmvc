@model IEnumerable<Saksupermarketsytemmvc.web.Models.Products>

@{
    ViewData["Title"] = "Product Stock Status";
}

<h2>Product Stock Status</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>SI.NO</th>
            <th>Product Name</th>
            <th>Category</th>
            <th>Stock Quantity</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            int index = 1;
            foreach (var item in Model)
            {
                string statusClass = item.StockStatus switch
                {
                    "Out of Stock" => "text-danger fw-bold",
                    "Low Stock" => "text-warning fw-bold",
                    _ => "text-success fw-bold"
                };

                <tr>
                    <td>@index</td>
                    <td>@item.Name</td>
                    <td>@item.Category?.CategoryName</td>
                    <td>@item.StockQty</td>
                    <td class="@statusClass">@item.StockStatus</td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No products found.</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to Products</a>
</div>
