@model Saksupermarketsytemmvc.web.Models.OrderDetail
@{
    ViewData["Title"] = "Delete Order Detail";
}

<h2>Delete Order Detail</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-warning">@ViewBag.ErrorMessage</div>
}

<h4>Are you sure you want to delete this order detail?</h4>

<div class="card mt-3 p-3 shadow-sm">
    <dl class="row">
        <dt class="col-sm-3">Product</dt>
        <dd class="col-sm-9">@Model.Product?.Name</dd>

        <dt class="col-sm-3">Quantity</dt>
        <dd class="col-sm-9">@Model.Quantity</dd>

        <dt class="col-sm-3">Unit Price</dt>
        <dd class="col-sm-9">@string.Format("{0:C}", Model.UnitPrice)</dd>

        <dt class="col-sm-3">Total Price</dt>
        <dd class="col-sm-9">@string.Format("{0:C}", Model.TotalPrice)</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Orderdetailsid" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-orderId="@Model.OrderId" class="btn btn-secondary">Cancel</a>
</form>
