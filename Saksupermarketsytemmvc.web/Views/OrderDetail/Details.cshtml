@model Saksupermarketsytemmvc.web.Models.OrderDetail
@{
    ViewData["Title"] = "Order Detail Info";
}

<h2>Order Detail Information</h2>

<div class="card mt-3 p-3 shadow-sm">
    <dl class="row">
        <dt class="col-sm-3">Order Detail ID</dt>
        <dd class="col-sm-9">@Model.Orderdetailsid</dd>

        <dt class="col-sm-3">Order ID</dt>
        <dd class="col-sm-9">@Model.OrderId</dd>

        <dt class="col-sm-3">Product</dt>
        <dd class="col-sm-9">@Model.Product?.Name</dd>

        <dt class="col-sm-3">Quantity</dt>
        <dd class="col-sm-9">@Model.Quantity</dd>

        <dt class="col-sm-3">Unit Price</dt>
        <dd class="col-sm-9">@string.Format("{0:C}", Model.UnitPrice)</dd>

        <dt class="col-sm-3">Total Price</dt>
        <dd class="col-sm-9">@string.Format("{0:C}", Model.TotalPrice)</dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Orderdetailsid" class="btn btn-warning">Edit</a>
    <a asp-action="Index" asp-route-orderId="@Model.OrderId" class="btn btn-secondary">Back to List</a>
</div>
