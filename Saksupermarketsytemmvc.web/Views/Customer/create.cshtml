@model Saksupermarketsytemmvc.web.Models.Customer

<h2>Create Customer</h2>
<hr />

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="CustomerName" class="form-label"></label>
        <input asp-for="CustomerName" class="form-control" />
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CustEmail" class="form-label"></label>
        <input asp-for="CustEmail" class="form-control" />
        <span asp-validation-for="CustEmail" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CustPhone" class="form-label"></label>
        <input asp-for="CustPhone" class="form-control" />
        <span asp-validation-for="CustPhone" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CustAddress" class="form-label"></label>
        <input asp-for="CustAddress" class="form-control" />
        <span asp-validation-for="CustAddress" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LoyaltyPoints" class="form-label"></label>
        <input asp-for="LoyaltyPoints" type="number" class="form-control" value="0" />
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}