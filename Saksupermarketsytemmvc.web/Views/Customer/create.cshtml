@model Saksupermarketsytemmvc.web.Models.Customer

@{
    ViewData["Title"] = "Create Customer";
}

<h2 class="text-success mb-3"><i class="bi bi-person-plus"></i> Create Customer</h2>
<hr />

<form asp-action="Create" method="post" class="needs-validation" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="CustomerName" class="form-label"></label>
            <input asp-for="CustomerName" class="form-control" placeholder="Enter full name" required />
            <span asp-validation-for="CustomerName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="CustEmail" class="form-label"></label>
            <input asp-for="CustEmail" class="form-control" placeholder="Enter email" required />
            <span asp-validation-for="CustEmail" class="text-danger"></span>
        </div>
    </div>

    <div class="row g-3 mt-2">
        <div class="col-md-6">
            <label asp-for="CustPhone" class="form-label"></label>
            <input asp-for="CustPhone" class="form-control" placeholder="Enter phone" />
        </div>
        <div class="col-md-6">
            <label asp-for="CustAddress" class="form-label"></label>
            <input asp-for="CustAddress" class="form-control" placeholder="Enter address" />
        </div>
    </div>

    <div class="mt-3">
        <label asp-for="LoyaltyPoints" class="form-label"></label>
        <input asp-for="LoyaltyPoints" class="form-control" type="number" value="0" min="0" />
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-success"><i class="bi bi-check-circle"></i> Save</button>
        <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
