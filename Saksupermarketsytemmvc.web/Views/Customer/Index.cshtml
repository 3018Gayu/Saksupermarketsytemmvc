@model IEnumerable<Saksupermarketsytemmvc.web.Models.Customer>

<h1 class="mb-4 text-center">Customer List</h1>

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<div class="mb-3 text-end">
    <a asp-action="Create" class="btn btn-primary">Create New Customer</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Loyalty Points</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.CustomerId</td>
                        <td>@customer.CustomerName</td>
                        <td>@customer.CustEmail</td>
                        <td>@customer.CustPhone</td>
                        <td>@customer.CustAddress</td>
                        <td>@customer.LoyaltyPoints</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@customer.CustomerId" class="btn btn-sm btn-warning me-1">Edit</a>
                            <a asp-action="Details" asp-route-id="@customer.CustomerId" class="btn btn-sm btn-info me-1">Details</a>
                            <a asp-action="Delete" asp-route-id="@customer.CustomerId" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">No customers found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
