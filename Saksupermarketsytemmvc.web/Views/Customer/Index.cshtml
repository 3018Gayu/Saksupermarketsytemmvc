@model IEnumerable<Saksupermarketsytemmvc.web.Models.Customer>

@{
    ViewData["Title"] = "Customer List";
}

<h1 class="mb-4 text-center text-primary"><i class="bi bi-people-fill"></i> Customers</h1>

<!-- SEARCH BAR -->
<form method="get" class="mb-3 d-flex justify-content-end">
    <input type="text" name="search" value="@ViewBag.Search"
           class="form-control w-25 me-2"
           placeholder="Search by name or phone" />

    <button class="btn btn-primary">
        <i class="bi bi-search"></i> Search
    </button>

    <a asp-action="Index" class="btn btn-secondary ms-2">
        <i class="bi bi-x-circle"></i> Clear
    </a>
</form>

<!-- SUCCESS / ERROR MESSAGES -->
@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @ViewBag.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @ViewBag.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="mb-3 text-end">
    <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-lg"></i> Add Customer</a>
</div>

<div class="table-responsive shadow-sm rounded">
    <table class="table table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Loyalty Points</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var customer in Model)
                {
                    <tr class="table-light">
                        <td>@customer.CustomerId</td>
                        <td>@customer.CustomerName</td>
                        <td>@customer.CustEmail</td>
                        <td>@customer.CustPhone</td>
                        <td>@customer.CustAddress</td>
                        <td><span class="badge bg-primary">@customer.LoyaltyPoints</span></td>
                        <td>
                            <a asp-action="Details" asp-route-id="@customer.CustomerId"
                               class="btn btn-sm btn-info me-1">
                                <i class="bi bi-eye"></i>
                            </a>

                            <a asp-action="Edit" asp-route-id="@customer.CustomerId"
                               class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil-square"></i>
                            </a>

                            <a asp-action="Delete" asp-route-id="@customer.CustomerId"
                               class="btn btn-sm btn-danger me-1">
                                <i class="bi bi-trash"></i>
                            </a>

                            <a asp-action="PurchaseHistory" asp-route-id="@customer.CustomerId"
                               class="btn btn-sm btn-secondary">
                                <i class="bi bi-receipt"></i> History
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center text-muted">No customers found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
