@model List<Customer>
<h1 class="mb-4">Customer List</h1>
<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Create New Customer</a>
</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Customer ID</th>
                <th>Customer Name</th>
                <th>Customer Email</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
           @if (Model != null && Model.Count > 0)
            {
             
           @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.CustomerId</td>
                    <td>@customer.CustomerName</td>
                    <td>@customer.CustEmail</td>
                    <td>@customer.CustPhone</td>
                    <td>@customer.CustAddress</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@customer.CustomerId" class="btn btn-sm btn-warning me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@customer.CustomerId" class="btn btn-sm btn-info me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@customer.CustomerId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }}
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No customers found.</td>
                </tr>
            }
        </tbody>
    </table>
