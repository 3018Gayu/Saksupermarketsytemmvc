@model Saksupermarketsytemmvc.web.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<h2 class="text-danger mb-3"><i class="bi bi-trash"></i> Delete Customer</h2>
<hr />

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle"></i> @ViewBag.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h5>Are you sure you want to delete this customer?</h5>

<div class="card shadow-sm p-4 my-3">
    <p><strong>Name:</strong> @Model.CustomerName</p>
    <p><strong>Email:</strong> @Model.CustEmail</p>
    <p><strong>Phone:</strong> @Model.CustPhone</p>
    <p><strong>Address:</strong> @Model.CustAddress</p>
    <p><strong>Loyalty Points:</strong> <span class="badge bg-primary">@Model.LoyaltyPoints</span></p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="CustomerId" />
    <button type="submit" class="btn btn-danger me-2"><i class="bi bi-trash"></i> Delete</button>
    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Cancel</a>
</form>
