@model IEnumerable<Saksupermarketsytemmvc.web.Models.Category>

@{
    ViewData["Title"] = "Category List";
}

<h1 class="mb-4">Category List</h1>

<p class="text-end">
    <a asp-action="Create" class="btn btn-primary">Create New Category</a>
</p>

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Category Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Detail" asp-route-id="@item.CategoryId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="3" class="text-center">No categories available.</td></tr>
        }
    </tbody>
</table>