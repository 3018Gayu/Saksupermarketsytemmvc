@model Saksupermarketsytemmvc.web.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<h2>Delete Customer</h2>
<hr />

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<h4>Are you sure you want to delete this customer?</h4>

<div class="card p-3 my-3">
    <p><strong>Name:</strong> @Model.CustomerName</p>
    <p><strong>Email:</strong> @Model.CustEmail</p>
    <p><strong>Phone:</strong> @Model.CustPhone</p>
    <p><strong>Address:</strong> @Model.CustAddress</p>
    <p><strong>Loyalty Points:</strong> @Model.LoyaltyPoints</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="CustomerId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
