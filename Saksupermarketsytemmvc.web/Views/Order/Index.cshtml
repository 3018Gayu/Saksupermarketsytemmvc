@model IEnumerable<Saksupermarketsytemmvc.web.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Order</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Invoice No</th>
            <th>Customer</th>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Tax Amount</th>
            <th>Discount</th>
            <th>Net Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.InvoiceNo</td>
                <td>@order.Customer?.CustomerName</td>
                <td>@order.OrderDate?.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@order.TotalAmount?.ToString("C")</td>
                <td>@order.TaxAmount?.ToString("C")</td>
                <td>@order.Discount?.ToString("C")</td>
                <td>@order.NetAmount?.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@order.OrderId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@order.OrderId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>