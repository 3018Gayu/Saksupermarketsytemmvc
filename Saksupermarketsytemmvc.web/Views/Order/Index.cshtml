@model List<Order>

<h1 class="text-center mb-4">Order List</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Create New Order</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Order ID</th>
                <th>Invoice No</th>
                <th>Customer ID</th>
                <th>Order Date</th>
                <th>Total Amount</th>
                <th>Tax Amount</th>
                <th>Discount</th>
                <th>Net Amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
{
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.InvoiceNo</td>
                    <td>@order.CustomerId</td>
                    <td>@(order.OrderDate.HasValue? order.OrderDate.Value.ToShortDateString() : "")</td>
                    <td>@string.Format("{0:C}", order.TotalAmount)</td>
                    <td>@string.Format("{0:C}", order.TaxAmount)</td>
                    <td>@string.Format("{0:C}", order.Discount)</td>
                    <td>@string.Format("{0:C}", order.NetAmount)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@order.OrderId" class="btn btn-sm btn-warning me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-info me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@order.OrderId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }}
            else
            {
            <tr>
                <td colspan="6" class="text-center">No customers found.</td>
            </tr>
            }
        </tbody>
    </table>
</div>

