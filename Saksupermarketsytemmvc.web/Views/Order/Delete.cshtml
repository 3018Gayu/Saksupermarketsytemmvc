@model Saksupermarketsytemmvc.web.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<h2>Delete Order</h2>

<h3>Are you sure you want to delete this order?</h3>

<div>
    <h4>Order #@Model.OrderId</h4>
    <dl class="row">
        <dt class="col-sm-2">Invoice No</dt>
        <dd class="col-sm-10">@Model.InvoiceNo</dd>

        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.Customer?.CustomerName</dd>

        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.OrderDate?.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">Net Amount</dt>
        <dd class="col-sm-10">@Model.NetAmount?.ToString("C")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="OrderId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>