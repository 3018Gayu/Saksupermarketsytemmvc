@model Saksupermarketsytemmvc.web.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<h2>Order Details</h2>

<div>
    <h4>Order #@Model.OrderId</h4>
    <dl class="row">
        <dt class="col-sm-2">Invoice No</dt>
        <dd class="col-sm-10">@Model.InvoiceNo</dd>

        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.Customer?.CustomerName</dd>

        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.OrderDate?.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">Total Amount</dt>
        <dd class="col-sm-10">@Model.TotalAmount?.ToString("C")</dd>

        <dt class="col-sm-2">Tax Amount</dt>
        <dd class="col-sm-10">@Model.TaxAmount?.ToString("C")</dd>

        <dt class="col-sm-2">Discount</dt>
        <dd class="col-sm-10">@Model.Discount?.ToString("C")</dd>

        <dt class="col-sm-2">Net Amount</dt>
        <dd class="col-sm-10">@Model.NetAmount?.ToString("C")</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.OrderId" class="btn btn-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
