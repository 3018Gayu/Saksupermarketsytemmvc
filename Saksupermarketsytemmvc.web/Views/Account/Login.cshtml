@model Saksupermarketsytemmvc.web.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<style>
    body {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        height: 100vh;
    }

    .login-card {
        border-radius: 10px;
        border: none;
        background-color: #fff;
    }

    .login-img-icon {
        width: 90px;
        height: 90px;
        object-fit: contain;
    }

    .form-label i {
        margin-right: 5px;
        color: #007bff;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm login-card p-4">
                <div class="text-center">
                    <img src="https://icon-library.com/images/supermarket-icon/supermarket-icon-5.jpg"
                         alt="Shopping Cart Icon"
                         class="login-img-icon mb-3">
                    <h3 class="mb-3 fw-bold text-primary">Sak Supermarket Login</h3>
                </div>

                <form asp-action="Login" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"><i class="fa-solid fa-envelope"></i>Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"><i class="fa-solid fa-lock"></i>Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fa-solid fa-right-to-bracket"></i> Login
                        </button>
                    </div>

                    <div class="text-center">
                        <a href="/Account/Register" class="me-2">Register</a> |
                        <a href="/Account/ForgotPassword" class="ms-2">Forgot Password?</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
