@{
    ViewData["Title"] = "Welcome Back";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background: #f5f7fa;
    }

    .welcome-container {
        display: flex;
        justify-content: center;
        padding-top: 40px;
        padding-bottom: 40px;
    }

    .welcome-card {
        width: 100%;
        max-width: 700px;
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        padding: 30px;
        text-align: center;
    }

    .welcome-img {
        width: 100%;
        max-height: 240px;
        object-fit: contain;
        margin-bottom: 20px;
    }

    .welcome-title {
        font-size: 2rem;
        font-weight: 700;
        color: #007bff;
    }

    .welcome-role {
        font-size: 1.1rem;
        margin-top: 5px;
        color: #555;
    }

    .btn-area {
        margin-top: 25px;
        display: flex;
        justify-content: center;
        gap: 15px;
    }
</style>

<div class="welcome-container">
    <div class="welcome-card">

        <!-- Banner image -->
        <img src="https://cdn.sanity.io/images/gyc8zs33/production/1c5bf359f10eef47804cc19cb246d685cd35217d-800x520.png?rect=0,50,800,420&w=1200&h=630&auto=format"
             alt="Welcome Image"
             class="welcome-img" />

        <!-- Title -->
        <h1 class="welcome-title">Hello, @ViewBag.UserName!</h1>

        <!-- Role Text -->
        <p class="welcome-role">
            You are logged in as <strong>@ViewBag.UserRole</strong>.
        </p>

        <!-- Buttons -->
        <div class="btn-area">
            <a class="btn btn-primary btn-lg" href="@Url.Action("Index", "Dashboard")">
                Go to Dashboard
            </a>

            <a class="btn btn-outline-danger btn-lg" href="@Url.Action("Logout", "Account")">
                Logout
            </a>
        </div>

    </div>
</div>
