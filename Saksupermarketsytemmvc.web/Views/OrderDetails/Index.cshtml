@model IEnumerable<Saksupermarketsytemmvc.web.Models.OrderDetails>

@{
    ViewData["Title"] = "Order Details List";
}

<h2>Order Details</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add Order Detail</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Order Detail ID</th>
            <th>Order</th>
            <th>Product</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OrderDetailId</td>
                <td>@item.Order?.InvoiceNo</td>
                <td>@item.Product?.Name</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice</td>
                <td>@item.TotalPrice</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.OrderDetailId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.OrderDetailId" class="btn btn-info btn-sm">View</a>
                    <a asp-action="Delete" asp-route-id="@item.OrderDetailId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
