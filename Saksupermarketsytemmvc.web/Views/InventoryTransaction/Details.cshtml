@model Saksupermarketsytemmvc.web.Models.InventoryTransaction

@{
    ViewData["Title"] = "Transaction Details";
}

<h2>Transaction Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.TransId</dd>

        <dt class="col-sm-2">Product</dt>
        <dd class="col-sm-10">@Model.Product?.Name</dd>

        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.TransType</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.TransDate?.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">Remarks</dt>
        <dd class="col-sm-10">@Model.Remarks</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary">Back</a>
