@model Saksupermarketsytemmvc.web.Models.InventoryTransaction

@{
    ViewData["Title"] = "Transaction Details";
}

<h2>Transaction Details</h2>

<dl class="row">
    <dt class="col-sm-3">Transaction ID</dt>
    <dd class="col-sm-9">@Model.TransId</dd>

    <dt class="col-sm-3">Product</dt>
    <dd class="col-sm-9">@Model.Product?.Name ?? "N/A"</dd>

    <dt class="col-sm-3">Quantity</dt>
    <dd class="col-sm-9">@Model.Quantity</dd>

    <dt class="col-sm-3">Transaction Type</dt>
    <dd class="col-sm-9">@Model.TransType</dd>

    <dt class="col-sm-3">Remarks</dt>
    <dd class="col-sm-9">@Model.Remarks</dd>

    <dt class="col-sm-3">Transaction Date</dt>
    <dd class="col-sm-9">@Model.TransDate?.ToString("yyyy-MM-dd")</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.TransId" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>
