@model Saksupermarketsytemmvc.web.Models.InventoryTransaction

@{
    ViewData["Title"] = "Create Transaction";
}

<h2>Create Inventory Transaction</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ProductId"></label>
        <select asp-for="ProductId" class="form-control" asp-items="@(new SelectList(ViewBag.Products, "ProductId", "Name"))">
            <option value="">--Select Product--</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="TransType"></label>
        <input asp-for="TransType" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TransDate"></label>
        <input asp-for="TransDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Remarks"></label>
        <input asp-for="Remarks" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
