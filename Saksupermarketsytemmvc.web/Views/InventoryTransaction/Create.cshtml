@model Saksupermarketsytemmvc.web.Models.InventoryTransaction
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Create Inventory Transaction";
}

<h2>Create Inventory Transaction</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <!-- Product Dropdown (Shows only Product ID, required) -->
    <div class="form-group mb-3">
        <label asp-for="ProductId">Product ID</label>
        <select asp-for="ProductId" class="form-control" asp-items="@(ViewBag.Products as SelectList)">
            <!-- No empty option because ProductId is required -->
        </select>
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>

    <!-- Quantity -->
    <div class="form-group mb-3">
        <label asp-for="Quantity">Quantity</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <!-- Transaction Type -->
    <div class="form-group mb-3">
        <label asp-for="TransType">Transaction Type (Purchase / Sale)</label>
        <input asp-for="TransType" class="form-control" placeholder="Purchase or Sale" />
        <span asp-validation-for="TransType" class="text-danger"></span>
    </div>

    <!-- Remarks -->
    <div class="form-group mb-3">
        <label asp-for="Remarks">Remarks</label>
        <input asp-for="Remarks" class="form-control" />
        <span asp-validation-for="Remarks" class="text-danger"></span>
    </div>

    <!-- Transaction Date -->
    <div class="form-group mb-3">
        <label asp-for="TransDate">Transaction Date</label>
        <input asp-for="TransDate" type="date" class="form-control" value="@Model.TransDate?.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="TransDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Transaction</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
