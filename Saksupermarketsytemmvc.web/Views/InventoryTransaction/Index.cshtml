@model IEnumerable<Saksupermarketsytemmvc.web.Models.InventoryTransaction>

@{
    ViewData["Title"] = "Inventory Transactions";
}

<h2>Inventory Transactions</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New Transaction</a>
</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Product</th>
            <th>Type</th>
            <th>Date</th>
            <th>Quantity</th>
            <th>Remarks</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TransId</td>
                <td>@item.Product?.Name</td>
                <td>@item.TransType</td>
                <td>@item.TransDate?.ToString("yyyy-MM-dd")</td>
                <td>@item.Quantity</td>
                <td>@item.Remarks</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.TransId">Details</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.TransId">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.TransId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
