@model List<InventoryTransaction>
<h1 class="mb-4">Inventory Transaction List</h1>
<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Create New Inventory Transaction</a>
</div>
<div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Transaction ID</th>
                <th>Product ID</th>
                <th>Quantity</th>
                <th>Transaction Type</th>
                <th>Remarks</th>
                <th>Transaction Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
           @if (Model != null && Model.Count > 0)
            {
             
           @foreach (var transaction in Model)
            {
                <tr>
                    <td>@transaction.TransId</td>
                    <td>@transaction.ProductId</td>
                    <td>@transaction.Quantity</td>
                    <td>@transaction.TransType</td>
                    <td>@(transaction.TransDate.HasValue ? transaction.TransDate.Value.ToShortDateString() : "")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@transaction.TransId" class="btn btn-sm btn-warning me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@transaction.TransId" class="btn btn-sm btn-info me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@transaction.TransId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }}
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No inventory transactions found.</td>
                </tr>
            }
        </tbody>
    </table>
