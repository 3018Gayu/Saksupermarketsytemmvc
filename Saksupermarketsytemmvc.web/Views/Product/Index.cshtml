@model List<Product>

<h1 class="mb-4">Product List</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Create New Product</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Product Name</th>
                <th>UnitPrice</th>
                <th>StockQty</th>
                <th>ExpiryDate</th>
                <th>CategoryID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@string.Format("{0:C}",product.UnitPrice)</td>
                    <td>@product.StockQty</td>
                    <td>
                        @(product.ExpiryDate.HasValue? product.ExpiryDate.Value.ToShortDateString() : "")
                    </td>
                    <td>@product.CategoryId</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-sm btn-warning me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@product.ProductId" class="btn btn-sm btn-info me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@product.ProductId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
