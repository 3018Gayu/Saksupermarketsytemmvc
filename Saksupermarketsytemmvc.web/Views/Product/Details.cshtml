@model Saksupermarketsytemmvc.web.Models.Product

<h1>Product Details</h1>
<hr />

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-warning">
        @ViewBag.ErrorMessage
    </div>
}

<div>
    <dl class="row">
        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Name)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(m => m.Name)</dd>

        <dt class="col-sm-4">Category</dt>
        <dd class="col-sm-8">@Model.Category?.CategoryName ?? "N/A"</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.UnitPrice)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(m => m.UnitPrice)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.StockQty)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(m => m.StockQty)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.ExpiryDate)</dt>
        <dd class="col-sm-8">
            @(Model.ExpiryDate.HasValue? Model.ExpiryDate.Value.ToShortDateString() : "N/A")
        </dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.ProductId" class="btn btn-danger">Delete</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
