@model IEnumerable<Saksupermarketsytemmvc.web.Models.Supplier>

<h1 class="mb-4 text-center text-primary"><i class="bi bi-truck"></i> Supplier List</h1>

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<div class="mb-3 text-end">
    <a asp-action="Create" class="btn btn-primary btn-lg"><i class="bi bi-plus-circle"></i> Add New Supplier</a>
</div>

<div class="table-responsive shadow-sm">
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Contact</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var supplier in Model)
                {
                    <tr>
                        <td>@supplier.Name</td>
                        <td>@supplier.Contact</td>
                        <td>@supplier.Address</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@supplier.SupplierId" class="btn btn-warning btn-sm me-1"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-action="Details" asp-route-id="@supplier.SupplierId" class="btn btn-info btn-sm me-1"><i class="bi bi-eye-fill"></i> Details</a>
                            <a asp-action="Delete" asp-route-id="@supplier.SupplierId" class="btn btn-danger btn-sm"><i class="bi bi-trash-fill"></i> Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">No suppliers available.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
