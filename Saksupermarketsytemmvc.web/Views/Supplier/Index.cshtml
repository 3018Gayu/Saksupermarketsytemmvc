@model IEnumerable<Saksupermarketsytemmvc.web.Models.Supplier>

<h1 class="mb-4">Supplier List</h1>

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<p class="text-end">
    <a asp-action="Create" class="btn btn-primary">Add New Supplier</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Contact</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var supplier in Model)
            {
                <tr>
                    <td>@supplier.Name</td>
                    <td>@supplier.Contact</td>
                    <td>@supplier.Address</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@supplier.SupplierId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@supplier.SupplierId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@supplier.SupplierId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="4" class="text-center text-muted">No suppliers available.</td></tr>
        }
    </tbody>
</table>