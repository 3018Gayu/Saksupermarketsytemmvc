@model Saksupermarketsytemmvc.web.Models.Supplier

<h2 class="text-danger mb-4 text-center"><i class="bi bi-trash-fill"></i> Delete Supplier</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<div class="card shadow-sm w-75 mx-auto p-4 mb-4">
    <h5>Are you sure you want to delete this supplier?</h5>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Contact:</strong> @Model.Contact</p>
    <p><strong>Address:</strong> @Model.Address</p>

    <div class="d-flex justify-content-between mt-4">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="SupplierId" />
            <button type="submit" class="btn btn-danger btn-lg"><i class="bi bi-trash"></i> Delete</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary btn-lg"><i class="bi bi-x-circle"></i> Cancel</a>
    </div>
</div>
