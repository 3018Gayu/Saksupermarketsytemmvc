@model IEnumerable<Saksupermarketsytemmvc.web.Models.User>

<h2 class="text-center fw-bold text-primary mb-4">
    <i class="bi bi-people-fill"></i> User Management
</h2>

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success shadow-sm">@ViewBag.SuccessMessage</div>
}
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger shadow-sm">@ViewBag.ErrorMessage</div>
}

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
        <i class="bi bi-plus-circle"></i> Add New User
    </a>
</div>

<div class="table-responsive shadow-sm">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th><i class="bi bi-person-fill"></i> Username</th>
                <th><i class="bi bi-envelope-fill"></i> Email</th>
                <th><i class="bi bi-key-fill"></i> Password</th>
                <th><i class="bi bi-award-fill"></i> Role</th>
                <th><i class="bi bi-check-circle-fill"></i> Status</th>
                <th><i class="bi bi-gear-fill"></i> Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.UserEmail</td>
                    <td>@user.PasswordHash</td>
                    <td>@user.UserRole</td>
                    <td>
                        @if (user.Isactive == "Active")
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-warning btn-sm me-1">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@user.UserId" class="btn btn-info btn-sm me-1 text-white">
                            <i class="bi bi-eye-fill"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
