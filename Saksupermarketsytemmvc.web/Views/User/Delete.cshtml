@model Saksupermarketsytemmvc.web.Models.User

<h2 class="text-danger text-center fw-bold mb-4">
    <i class="bi bi-exclamation-triangle-fill"></i> Delete User
</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger shadow-sm">@ViewBag.ErrorMessage</div>
}

<div class="d-flex justify-content-center">
    <div class="card shadow p-4 w-50">

        <h4 class="text-danger mb-3">Are you sure you want to delete this user?</h4>

        <p><strong>Username:</strong> @Model.UserName</p>
        <p><strong>Email:</strong> @Model.UserEmail</p>
        <p><strong>Role:</strong> @Model.UserRole</p>
        <p><strong>Status:</strong> @Model.Isactive</p>

        <form asp-action="Delete" method="post" class="mt-3">
            <input type="hidden" asp-for="UserId" />

            <div class="d-flex justify-content-between">
                <button class="btn btn-danger btn-lg">
                    <i class="bi bi-trash"></i> Delete
                </button>

                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>

    </div>
</div>
