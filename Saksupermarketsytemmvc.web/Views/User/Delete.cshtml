@model Saksupermarketsytemmvc.web.Models.User

<h2>Delete User</h2>
<hr />

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<h4>Are you sure you want to delete this user?</h4>

<div>
    <p><strong>User Name:</strong> @Model.UserName</p>
    <p><strong>Email:</strong> @Model.UserEmail</p>
    <p><strong>Role:</strong> @Model.UserRole</p>
    <p><strong>Status:</strong> @Model.Isactive</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="UserId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>