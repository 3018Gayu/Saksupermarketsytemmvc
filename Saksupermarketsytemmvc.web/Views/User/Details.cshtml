@model Saksupermarketsytemmvc.web.Models.User

<h2>User Details</h2>
<hr />

<div class="card p-3">
    <p><strong>User Name:</strong> @Model.UserName</p>
    <p><strong>Email:</strong> @Model.UserEmail</p>
    <p><strong>Password:</strong> @Model.PasswordHash</p>
    <p><strong>Role:</strong> @Model.UserRole</p>
    <p><strong>Status:</strong> @Model.Isactive</p>
</div>

<a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-warning mt-3">Edit</a>
<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
