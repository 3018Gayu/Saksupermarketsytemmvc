@model Saksupermarketsytemmvc.web.Models.User

<h2 class="text-center text-warning fw-bold mb-4">
    <i class="bi bi-pencil-fill"></i> Edit User
</h2>

<div class="d-flex justify-content-center">
    <div class="card shadow p-4 w-50">

        <form asp-action="Edit" method="post">

            <input type="hidden" asp-for="UserId" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-floating mb-3">
                <input asp-for="UserName" class="form-control" placeholder="Username" />
                <label asp-for="UserName"><i class="bi bi-person-fill"></i> Username</label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="UserEmail" class="form-control" placeholder="Email" />
                <label asp-for="UserEmail"><i class="bi bi-envelope-fill"></i> Email</label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="PasswordHash" type="password" class="form-control" placeholder="Leave blank to keep existing" />
                <label asp-for="PasswordHash"><i class="bi bi-key-fill"></i> New Password</label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="UserRole" class="form-control" placeholder="Role" />
                <label asp-for="UserRole"><i class="bi bi-award-fill"></i> Role</label>
            </div>

            <div class="form-floating mb-3">
                <select asp-for="Isactive" class="form-control">
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                </select>
                <label><i class="bi bi-check-circle-fill"></i> Status</label>
            </div>

            <div class="d-flex justify-content-between">
                <button class="btn btn-success btn-lg"><i class="bi bi-check-circle"></i> Update</button>
                <a asp-action="Index" class="btn btn-secondary btn-lg"><i class="bi bi-arrow-left-circle"></i> Cancel</a>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
