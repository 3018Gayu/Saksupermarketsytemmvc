@model Saksupermarketsytemmvc.web.Models.Orders

@{
    ViewData["Title"] = "Delete Order";
}

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
        <h4><i class="bi bi-trash"></i> Delete Order</h4>
    </div>
    <div class="card-body">

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle-fill"></i> @ViewBag.ErrorMessage
            </div>
        }

        <p>Are you sure you want to delete this order?</p>

        <dl class="row">
            <dt class="col-sm-3">Customer</dt>
            <dd class="col-sm-9">@Model.Customer?.CustomerName</dd>

            <dt class="col-sm-3">Order Date</dt>
            <dd class="col-sm-9">
                @(Model.OrderDate.HasValue? Model.OrderDate.Value.ToString("yyyy-MM-dd") : "N/A")
            </dd>

            <dt class="col-sm-3">Total Amount</dt>
            <dd class="col-sm-9">@Model.TotalAmount?.ToString("C") ?? "0.00"</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="OrderId" />
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Cancel</a>
                <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
            </div>
        </form>
    </div>
</div>
