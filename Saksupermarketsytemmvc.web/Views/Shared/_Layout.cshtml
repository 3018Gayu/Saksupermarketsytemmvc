@{
    var isAuthenticated = User.Identity?.IsAuthenticated ?? false;
    var userName = isAuthenticated ? User.Identity.Name : "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Saksoft Supermarket</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-controller="Dashboard" asp-action="Index">Saksoft Supermarket</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu" aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarMenu">
                @if (isAuthenticated)
                {
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Dashboard" asp-action="Index">Home</a>
                        </li>

                        @* Admin Menu *@
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="Index">Users</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Products" asp-action="Index">Inventory</a></li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Sales</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Reports" asp-action="DailySales" data-title="Daily Sales">Daily Sales</a></li>
                                    <li><a class="dropdown-item" asp-controller="Reports" asp-action="WeeklySales" data-title="Weekly Sales">Weekly Sales</a></li>
                                    <li><a class="dropdown-item" asp-controller="Reports" asp-action="MonthlySales" data-title="Monthly Sales">Monthly Sales</a></li>
                                </ul>
                            </li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Reports" asp-action="Index">Reports</a></li>
                        }
                        @* Cashier Menu *@
                        else if (User.IsInRole("Cashier"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Billing" asp-action="Create">Billing</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Customer" asp-action="Index">Customers</a></li>
                        }
                        @* Inventory Manager Menu *@
                        else if (User.IsInRole("Inventory Manager"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Products" asp-action="Index">Products</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Supplier" asp-action="Index">Suppliers</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Products" asp-action="StockStatus">Stock Status</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="InventoryTransaction" asp-action="Index">InventoryTransaction</a></li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><span class="nav-link">@userName</span></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a></li>
                    </ul>
                }
                else
                {
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Login</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register">Register</a></li>
                    </ul>
                }
            </div>
        </div>
    </nav>

    <main role="main" class="container my-4">
        @RenderBody()
    </main>

    <footer class="text-center py-3">
        <div class="container">
            © 2025 Saksoft Supermarket
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
